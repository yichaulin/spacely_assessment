<div class="properties-container">
  <div class="properties-header">
    <h1>Properties Batch Upload</h1>
    <p class="subtitle">Upload a CSV file to process properties in batch</p>
  </div>

  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-error">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if flash[:invalid_data] && flash[:invalid_data].any? %>
    <div class="alert alert-warning">
      <strong>Invalid data:</strong>
      <ul>
        <% flash[:invalid_data].each do |data| %>
          <li>Row <%= data["row"] %>: <%= data["error"] %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="upload-form-container">
    <%= form_with url: batch_properties_path, method: :post, multipart: true, local: true, class: "upload-form" do |form| %>
      <div class="form-group">
        <%= form.label :file, "CSV File", class: "form-label" %>
        <%= form.file_field :file, accept: ".csv", class: "form-control", required: true %>
        <small class="form-help">Please select a CSV file to upload</small>
      </div>

      <div class="form-actions">
        <%= form.submit "Upload and Process", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

  <div class="info-section">
    <h2>CSV Format Requirements</h2>
    <ul>
      <li>File must be in CSV format (.csv extension)</li>
      <li>First row should contain column headers</li>
      <li>Each subsequent row represents a property record</li>
    </ul>
  </div>
</div>

